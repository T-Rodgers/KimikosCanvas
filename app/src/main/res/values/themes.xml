<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KimikosCanvas" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="fontFamily">@font/amiko_semibold</item>
        <item name="android:windowBackground">@color/parentBackground</item>
    </style>

    <style name="TextView.Header" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/amiko_semibold</item>
    </style>

    <style name="TextView.SubHeader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/amiko_semibold</item>
    </style>

    <style name="FirebaseUI.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="hintTextColor">@color/primaryDarkColor</item>
    </style>

    <style name="FirebaseUI.TextInputEditText.EmailField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="FirebaseUI.TextInputEditText.PasswordField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />


</resources>
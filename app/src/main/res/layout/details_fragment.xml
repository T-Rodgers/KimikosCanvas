<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="canvas"
            type="com.tdr.app.kimikoscanvas.canvas.Canvas" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.DetailsFragment">

        <ImageView
            android:id="@+id/canvas_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_image_height"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginEnd="@dimen/large_margin"
            android:scaleType="centerCrop"
            app:canvasImage="@{canvas}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:canvasName="@{canvas}"
            tools:text="Dripping Branch"
            app:layout_constraintEnd_toEndOf="@+id/canvas_image"
            app:layout_constraintStart_toStartOf="@+id/canvas_image"
            app:layout_constraintTop_toBottomOf="@+id/canvas_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
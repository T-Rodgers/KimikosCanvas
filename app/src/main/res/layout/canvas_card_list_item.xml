<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="6dp"
        app:cardElevation="12dp">


        <ImageView
            android:background="@color/primaryLightColor"
            android:id="@+id/canvas_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/kc_logo_black" />
    </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/image_card"
            android:id="@+id/canvas_name"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="@id/image_card"
            app:layout_constraintEnd_toEndOf="@id/image_card"
            android:layout_height="wrap_content"
            tools:text="Sunset" />

        <TextView
            app:layout_constraintEnd_toEndOf="@id/canvas_name"
            app:layout_constraintStart_toStartOf="@id/canvas_name"
            app:layout_constraintTop_toBottomOf="@id/canvas_name"
            android:id="@+id/canvas_price"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$29.99" />


</androidx.constraintlayout.widget.ConstraintLayout>